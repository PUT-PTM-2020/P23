@using PTM.Data
<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="container text-center" style="width:500px">
        <h3 class="modal-title mb-3" id="exampleModalLabel">Twoje saldo:</h3>
        <h1 class="mb-5">
            @Database.Accounts.First(x => x.Id == CardId).Balance zł
        </h1>
        <a class="col-md-2 btn btn-warning" href="#">Wróć</a>
    </div>
</div>

@code {
    [Parameter]
    public string CardId { get; set; }

}
